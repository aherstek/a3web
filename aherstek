body {
  font-family: "Avantgarde", sans-serif;
}

/*layout based on https://lilysnowdenfine.com/ */

/*SIDEBAR OPTION BEGIN*/
/*sidebar based on w3schools https://www.w3schools.com/w3css/w3css_sidebar.asp*/
.sidebar {
  height: 100%; /*full screen sidebar*/
  width: 200px;
  position: fixed;
  top: 0; /*no margins on side of page*/
  left: 0;
  background-color: #fdf0f1;
  border: 5px dotted #e9a2a7;	
  overflow-x: hidden; /*no horizontal scroll bar, but vertical if necessary*/
  padding-top: 15px;
}

/* style of link texts*/
.sidebar a {
  padding: 15px;
  text-decoration: none; /*no underline*/
  text-align: center;
  font-size: 25px;
  color: black;
  display: block; /*each on their own line*/
}

.sidebar a:hover {
  color: #014421; /*different color when hovering*/
}

/*for sidebar img*/
/*logo template from canva @createdbymisia */
img.logo {
  display: block;
  border: none;
}

/*SIDEBAR OPTION END*/


/*body of resume & portf. here*/
.resume {
  margin-left: 200px; /* Same as the width of the sidebar */
  font-size: 16px; 
  color: black;
  padding: 0px 10px;
  text-align: justify;
}

 .portfolio {
  margin-left: 200px; /*same as sidebar width*/
  font-style: italic;
  font-size: 14px;  
  color: black;
  padding: 0px 10px;
  text-align: center;
 }

/*heading paragraphy formats*/
h1 {
  font-size: 24px;
  font-weight: normal;
  margin-left: auto;
  margin-right: auto;
  text-align: left;
}

/*specific formatting used only in portfolio*/
.title {
  font-size: 40px;
  font-style: italic;
  text-align: center;
  color: #e9a2a7;
  }	 
h2  {
  font-size: 18px;
  color: black;
  font-style: normal;
  margin-left: auto;
  margin-right: auto;
  text-align: center;
}
p.abstract {
  font-size: 16px;
  color: black;
  font-style: normal;
  margin-left: auto;
  margin-right: auto;
  text-align: justify;
}

/* to get better visual layout for images with descriptions*/
.desc > p { 
  padding: 0px 10px 40px 10px;
}

/*give images gallery-like framing*/
img {
  display: block;
  margin-left: auto;
  margin-right: auto;
  max-width: 100%;
  border: 10px solid black;
  padding: 5px;

}

p.quote {
  font-style: italic;
  color: #e9a2a7;
}
/*for fun*/
.hide {
	display: none;
}
